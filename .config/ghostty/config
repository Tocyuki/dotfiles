shell-integration = zsh
theme = TokyoNight
font-family = "Moralerspace Argon"
font-size = 16
fullscreen = true
macos-non-native-fullscreen = true

# 日本語対応設定
font-feature = -calt,-liga,-kern,-dlig,-hlig
font-thicken = true

# 日本語フォールバック
font-family-bold = "Moralerspace Argon"
font-family-italic = "Moralerspace Argon"
font-family-bold-italic = "Moralerspace Argon"

# 文字間隔調整（日本語の可読性向上）
adjust-cell-width = 0
adjust-cell-height = 5%

# テキストレンダリング最適化
alpha-blending = linear-corrected

# ウィンドウパディング
window-padding-x = 5
window-padding-y = 5

# 文字エンコーディング
term = xterm-256color

# 透過設定
background-opacity = 0.8
background-blur-radius = 20

# クリップボード設定
copy-on-select = true
clipboard-read = allow
clipboard-write = allow

# カーソル設定
cursor-style = block
cursor-style-blink = true

# パフォーマンス設定
unfocused-split-opacity = 0.7

# macOS固有設定
window-theme = auto
macos-titlebar-style = tabs
macos-option-as-alt = true
quit-after-last-window-closed = false

# キーバインド - 分割ウィンドウ
keybind = cmd+|=new_split:right
keybind = cmd+-=new_split:down

# キーバインド - タブ管理
keybind = cmd+t=new_tab
keybind = cmd+w=close_surface

